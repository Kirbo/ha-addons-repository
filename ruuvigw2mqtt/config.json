{
  "name": "RuuviTag into MQTT",
  "version": "0.0.1",
  "slug": "ruuvitag-mqtt",
  "description": "Broadcast RuuviTag sensors into MQTT",
  "url": "https://gitlab.com/kirbo/addon-ruuvitag-mqtt/",
  "startup": "once",
  "boot": "auto",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "mqtt_protocol": "mqtt",
    "mqtt_address": "core-mosquitto",
    "mqtt_port": 1884,
    "mqtt_credentials": {
      "client_id": "ruuvi-gw-mqtt-to-ha",
      "username": "",
      "password": ""
    },
    "mqtt_ha_topic": "homeassistant/",
    "mqtt_ruuvi_topic": "ruuvi/#",
    "update_interval": 0
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "mqtt_protocol": "list(tcp|tls|ws|mqtt)",
    "mqtt_address": "str",
    "mqtt_port": "int",
    "mqttuser": {
      "clientId": "str",
      "username": "str",
      "password": "password"
    },
    "mqtt_ha_topic": "str",
    "mqtt_ruuvi_topic": "str",
    "update_interval": "int"
  }
}
